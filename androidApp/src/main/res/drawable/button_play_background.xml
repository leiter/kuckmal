<?xml version="1.0" encoding="utf-8"?>
<!-- Modern play button background with rounded corners -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state (D-pad navigation for TV) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_play_background"/>
            <stroke android:width="2dp" android:color="@color/channel_selected_border"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#005577"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_play_background"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
