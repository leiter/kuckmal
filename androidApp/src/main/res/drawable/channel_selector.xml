<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Activated state (checked in choice mode) - highest priority -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/channel_selected"/>
            <stroke android:width="3dp" android:color="@color/channel_selected_border"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Selected state (also works) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/channel_selected"/>
            <stroke android:width="3dp" android:color="@color/channel_selected_border"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Focused state (D-pad highlight) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/channel_focused_background"/>
            <stroke android:width="3dp" android:color="@color/channel_focused_border"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Default state - all items get bright background, no border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
