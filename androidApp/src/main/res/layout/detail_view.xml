<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_background">

    <!-- Scrollable content area -->
    <ScrollView
        android:id="@+id/detail_scroll_portrait"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:saveEnabled="false"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:scrollbars="vertical"
        android:fadeScrollbars="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="0dp">

            <!--   Channel Logo Section  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/channel_logo_container_rounded"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:elevation="1dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:scaleType="fitCenter"
                    android:id="@+id/dvSenderImg" />
            </LinearLayout>


            <!--   Theme Section  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/theme_label"
                android:textSize="13sp"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"
                android:layout_marginBottom="6dp"
                android:id="@+id/dv2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/channel_selected_border"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:lineSpacingMultiplier="1.15"
                android:layout_marginBottom="24dp"
                android:id="@+id/dvThema" />

            <!--   Title Section  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_label"
                android:textSize="13sp"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"
                android:layout_marginBottom="6dp"
                android:id="@+id/dv3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/md_theme_onSurface"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="28dp"
                android:lineSpacingMultiplier="1.2"
                android:letterSpacing="0.005"
                android:id="@+id/dvTitel" />

            <!--   Metadata Section  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/metadata_container_rounded"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:elevation="1dp">

                <!--   Date Row  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/date_label"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        android:fontFamily="sans-serif"
                        android:id="@+id/dv4" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="@color/md_theme_onSurface"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:id="@+id/dvDatum" />
                </LinearLayout>

                <!--   Time Row  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/time_label"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        android:fontFamily="sans-serif"
                        android:id="@+id/dv5" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="@color/md_theme_onSurface"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:id="@+id/dvZeit" />
                </LinearLayout>

                <!--   Duration Row  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/duration_label"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        android:fontFamily="sans-serif"
                        android:id="@+id/dv6" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="@color/md_theme_onSurface"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:id="@+id/dvDauer" />
                </LinearLayout>

                <!--   Size Row  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/size_label"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        android:fontFamily="sans-serif"
                        android:id="@+id/dv6b" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="@color/md_theme_onSurface"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:id="@+id/dvGroesse" />
                </LinearLayout>
            </LinearLayout>

            <!--   Description Section - Collapsible UX  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/description_container_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="1dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/descriptionContainer"
                android:nextFocusDown="@id/qualityHigh">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description_label"
                    android:textSize="14sp"
                    android:textColor="@color/channel_selected_border"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/dv7" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/md_theme_onSurface"
                    android:fontFamily="sans-serif"
                    android:lineSpacingMultiplier="1.3"
                    android:letterSpacing="0.005"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:id="@+id/dvBeschreibung" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:id="@+id/showMoreButton">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_more"
                        android:textSize="13sp"
                        android:textColor="@color/channel_selected_border"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:id="@+id/showMoreText" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_chevron_down"
                        android:id="@+id/showMoreChevron" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!--   Playback Controls - Fixed Bottom Component  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp"
        android:background="@drawable/playback_controls_rounded"
        android:padding="24dp"
        android:elevation="4dp">

        <!--   Quality Selection  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quality_label"
            android:textSize="14sp"
            android:textColor="@color/channel_selected_border"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/quality_high"
                android:textSize="15sp"
                android:textColor="@color/md_theme_onSurface"
                android:fontFamily="sans-serif"
                android:id="@+id/qualityHigh"
                android:background="@drawable/radio_button_background"
                android:focusable="true"
                android:padding="14dp"
                android:nextFocusRight="@id/qualityLow"
                android:nextFocusDown="@id/play"
                android:nextFocusUp="@id/descriptionContainer" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/quality_low"
                android:textSize="15sp"
                android:textColor="@color/md_theme_onSurface"
                android:fontFamily="sans-serif"
                android:id="@+id/qualityLow"
                android:checked="true"
                android:background="@drawable/radio_button_background"
                android:focusable="true"
                android:padding="14dp"
                android:nextFocusLeft="@id/qualityHigh"
                android:nextFocusDown="@id/download"
                android:nextFocusUp="@id/descriptionContainer" />
        </RadioGroup>

        <!--   Action Buttons Row  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_play"
                android:id="@+id/play"
                android:background="@drawable/button_play_background"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:focusable="true"
                android:contentDescription="@string/cd_play"
                app:tint="@color/button_play_icon"
                android:nextFocusRight="@id/download"
                android:nextFocusUp="@id/qualityHigh" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_download"
                android:id="@+id/download"
                android:background="@drawable/button_download_background"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:focusable="true"
                android:contentDescription="@string/cd_download"
                app:tint="@color/button_download_icon"
                android:nextFocusLeft="@id/play"
                android:nextFocusUp="@id/qualityLow" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
