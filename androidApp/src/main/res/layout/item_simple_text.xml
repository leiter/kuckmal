<?xml version="1.0" encoding="utf-8"?>
<!-- Modern card-style list item for RecyclerView -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/list_item_card_selector"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:clickable="true"
    android:minHeight="72dp"
    android:elevation="1dp"
    android:paddingStart="12dp"
    android:paddingEnd="20dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <!-- Accent indicator bar on the left -->
    <View
        android:id="@+id/accentBar"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/channel_list_background"
        android:layout_marginEnd="16dp" />

    <!-- Text content -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="@color/md_theme_onSurface"
        android:lineSpacingExtra="4dp"
        android:lineSpacingMultiplier="1.15"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.005" />

</LinearLayout>
