package = liblzma
headers = lzma.h
headerFilter = lzma.h lzma/**

compilerOpts.ios_arm64 = -I/opt/homebrew/include
compilerOpts.ios_simulator_arm64 = -I/opt/homebrew/include
compilerOpts.ios_x64 = -I/usr/local/include

linkerOpts.ios_arm64 = -L/opt/homebrew/lib -llzma
linkerOpts.ios_simulator_arm64 = -L/opt/homebrew/lib -llzma
linkerOpts.ios_x64 = -L/usr/local/lib -llzma
